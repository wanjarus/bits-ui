radio-btn($color=$color-p)
    display: inline-block
    position: relative
    font-size: 1em
    user-select: none
    input[type="radio"]
        position: absolute
        opacity: 0
        left:0
        top: 0
        cursor: pointer
        margin: 0
        width: 100%
        height: 100%

    button
        button($bg-color=lighten(grey, 70%))

    /* On mouse-over, add a background color */
    &:hover input[type="radio"] ~ button
        bg-color(lighten($color, 20%))

    /* When the radio button is checked, add background color */
    input[type="radio"]:checked ~ button
        bg-color($color)
