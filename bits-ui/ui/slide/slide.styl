slide
    [ref="nav"]
        text-align: center
        padding-top: 1.2rem
        dot
            display: inline-block
            background-color: $color-primary
            width: 1em
            height: 1em
            border-radius: 50%
            cursor: pointer
            margin: 0 0.4em
        dot:hover
            background-color: $color-analog-right
        dot.selected
            background-color: $color-complement
