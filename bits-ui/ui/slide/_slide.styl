slide(
        $dot-color=$color-p,
        $dot-color-hover=$color-a2,
        $dot-color-active=$color-c)
    [ref="nav"]
        text-align: center
        padding-top: 1.2rem
        dot
            display: inline-block
            background-color: $dot-color
            width: 1em
            height: 1em
            border-radius: 50%
            cursor: pointer
            margin: 0 0.4em
        dot:hover
            background-color: $dot-color-hover
        dot.selected
            background-color: $dot-color-active
