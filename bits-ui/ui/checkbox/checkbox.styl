checkbox, [data-is="checkbox"]
    $width = 1.1em
    $height = 1.1em
    ui-font()
    position: relative
    width: $width
    height: $height
    user-select: none
    display: inline-block

    /* Hide the browser's default checkbox */
    input
        opacity: 0
        cursor: pointer
        width: $width
        height: $height
        position: absolute
        z-index: 1

    /* Create a custom checkbox */
    span
        position: absolute
        top: 0
        left: 0
        width: $width
        height: $height
        background-color: lighten(grey, 50%)
        box-shadow: 0 1px 1px 0 grey

    /* On mouse-over, add a grey background color */
    &:hover input ~ span
        background-color: $checkbox-color-hover


    /* When the checkbox is checked, add background color */
    input:checked ~ span
        background-color: $checkbox-color-active

    /* Create the checkmark/indicator (hidden when not checked) */
    span:after
        content: ""
        position: absolute
        display: none

    /* Show the checkmark when checked */
    input:checked ~ span:after
        display: block

    /* Style the checkmark/indicator */
    span:after
        if darkshade($checkbox-color-active)
            border: solid white
        else
            border: solid black
        left: 0.3em
        width: 0.3em
        height: 0.6em
        border-width: 0 0.2em 0.2em 0
        transform: rotate(45deg)
