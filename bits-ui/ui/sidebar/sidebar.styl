sidebar
    ui-font()
    position: absolute
    top: 0

    div[ref="wrapper"]
        position: fixed
        z-index: 101
        display: flex
        flex-wrap: wrap
        align-content: flex-start
        height: 100%
        background-color: white
        overflow-x: hidden
        transition: 0.3s

    div[ref="overlay"]
        position: fixed
        top: 0
        background-color: rgba(0,0,0,0.7)
        z-index: 100
        display: none
        width: 100%
        height: 100%
        &.show
            display: block
