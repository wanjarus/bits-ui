menu-accordion(
        $border-color=$color-p,
        $bg-color=$color-c)
    padding: 0
    margin: 0
    border: 1px solid $border-color
    border-radius: 0.2em

    i.caret
        display: inline-block
        float: right
        border-left: 0.25em solid transparent
        border-right: 0.25em solid transparent
        border-bottom: 0.25em solid $border-color
        margin-bottom: 0.25em
        transform: rotateZ(90deg)
        will-change: transform

    li
        list-style: none
        display: block
        overflow-y: hidden
        overflow-x: hidden

    ul
        padding-left: 0.5em
        transition: height 0.2s
        will-change: transition
    a
        display: block
        cursor: pointer
        i.caret
            transition: transform 0.2s
            margin-top: 0.55em
            margin-right: 0.2em
    a:active
        bg-color($bg-color)
    a ~ ul
        height: 0
    a.on
        i.caret
            transform: rotateZ(180deg)
