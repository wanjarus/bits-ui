button-group($radius=4px)
    display: flex
    button, .button, [data-is="button"],
    button-square, .button-square, [data-is="button-square"]
        width: 100%
        border-radius: 0
        &:first-of-type
            border-right-radius(0)
            border-left-radius($radius)
        &:last-of-type
            border-left-radius(0)
            border-right-radius($radius)

    radio-btn, tab
        &:first-of-type
            button
                border-right-radius(0)
                border-left-radius($radius)
        &:last-of-type
            button
                border-left-radius(0)
                border-right-radius($radius)
