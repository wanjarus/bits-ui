switch, [data-is="switch"]
    ui-font()
    display: flex
    font-weight: bold
    width: 4.5em
    height: 1.5em
    align-items: center
    position: relative

    input[type="checkbox"]
        /* Hide default HTML checkbox */
        position: absolute
        opacity: 0
        cursor: pointer
        z-index: 10
        width: 100%
        height: 100%

    [ref="row"]
        display: flex
        width: 100%
        height: 100%
        border-radius: 0.2em
        background-color: lighten(grey, 70%)
        box-shadow: 0px 1px 2px 0px darken(grey, 20%)
        transition: .4s
        align-items: center
        text-align: center

    [ref="row"] span
        font-size: 0.8em
        display: flex
        justify-content: center
        align-items: center
        width: 50%
        margin-top: 0.1em

    [ref="off"]
        color: black
    [ref="on"]
        if darkshade($switch-color-active)
            color: white
        else
            color: black

    [ref="paddle"]
        box-sizing: border-box
        position: absolute
        text-align: center
        width: 50%
        height: 100%
        border: 1px solid grey
        border-radius: 0.2em
        background-color: white
        transition: .2s
        top: 0
        left: 0

    input[type="checkbox"]:checked ~ [ref="row"]
        background-color: $switch-color-active

    input[type="checkbox"]:checked ~ [ref="paddle"]
        transform: translate(101%, 0)
        will-change: transform
